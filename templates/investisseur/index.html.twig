{% extends 'base.html.twig' %}

{% block title %}Investisseur index{% endblock %}

{% block body %}

     <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.10.22/css/jquery.dataTables.min.css">
       <script src="https://code.jquery.com/jquery-3.6.0.js"></script>
       <script type="text/javascript" src="https://cdn.datatables.net/1.10.22/js/jquery.dataTables.min.js"></script>

       <script type="text/javascript">
       $(document).ready( function () {
        $('#myTable').DataTable();
    } );
    </script>

    <div class="container">
        <h1 class="text-center mb-4">Investisseur list</h1>

        <div class="row mb-3">
            <div class="col">
                <a href="{{ path('app_investisseur_new') }}" class="btn btn-primary">Create New Investisseur</a>
            </div>
        </div>

        <div class="table-responsive">
            <table class="table table-striped table-hover" id="myTable">
                <thead class="thead-dark">
                    <tr>
                        <th scope="col">Id</th>
                        <th scope="col">Nom</th>
                        <th scope="col">Email</th>
                        <th scope="col">CompteBancaire</th>
                        <th scope="col">Address</th>
                        <th scope="col">Contact</th>
                        <th scope="col">SecteurInteret</th>
                        <th scope="col">MontantInvestissementMinimum</th>
                        <th scope="col">HistoriqueInvestissements</th>
                        <th scope="col">MontantInvesti</th>
                        <th scope="col">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for investisseur in investisseurs %}
                        <tr>
                            <td>{{ investisseur.id }}</td>
                            <td>{{ investisseur.nom }}</td>
                            <td>{{ investisseur.email }}</td>
                            <td>{{ investisseur.compteBancaire }}</td>
                            <td>{{ investisseur.address }}</td>
                            <td>{{ investisseur.Contact }}</td>
                            <td>{{ investisseur.SecteurInteret }}</td>
                            <td>{{ investisseur.MontantInvestissementMinimum }}</td>
                            <td>{{ investisseur.HistoriqueInvestissements }}</td>
                            <td>{{ investisseur.MontantInvesti }}</td>
                            <td>
                                <a href="{{ path('app_investisseur_show', {'id': investisseur.id}) }}" class="btn btn-info btn-sm">Show</a>
                                <a href="{{ path('app_investisseur_edit', {'id': investisseur.id}) }}" class="btn btn-primary btn-sm">Edit</a>
                                <a href="{{ path('app_investisseur_favorities', {'id': investisseur.id}) }}" class="btn btn-info btn-sm">Favorities</a>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="11">No records found for Investisseur</td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
