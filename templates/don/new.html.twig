{% extends 'base.html.twig' %}

{% block title %}Create New Don{% endblock %}

{% block body %}
    <div class="container my-5">
        <h1 class="text-center mb-4">Create New Don</h1>

        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card shadow bg-light rounded">
                    <div class="card-body">
                        {{ form_start(form) }}
                        <fieldset>
                            <legend>Don Information</legend>
                            {{ form_row(form.montant, {'attr': {'class': 'form-control', 'placeholder': 'Montant'}}) }}
                            {{ form_row(form.projet, {'attr': {'class': 'form-control', 'placeholder': 'Projet'}}) }}
                            {{ form_row(form.typeDon, {'attr': {'class': 'form-control', 'placeholder': 'Type de Don'}}) }}
                            {{ form_row(form.donateur, {'attr': {'class': 'form-control', 'placeholder': 'Donateur'}}) }}
                            {{ form_row(form.beneficiaire, {'attr': {'class': 'form-control', 'placeholder': 'Bénéficiaire'}}) }}
                            {{ form_row(form.date, {'attr': {'class': 'form-control'}}) }}
                        </fieldset>
                        <div class="text-center">
                            <button type="submit" class="btn btn-primary">Create</button>
                        </div>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>

        <div class="text-center mt-3">
            <a href="{{ path('don_ajouter') }}" class="btn btn-secondary"><i class="fas fa-arrow-left"></i> Back to List</a>
        </div>
    </div>
{% endblock %}
